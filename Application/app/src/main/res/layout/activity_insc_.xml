<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khoudourmohamedelamine.hp.blood_d.Insc_A"
    android:background="@drawable/btn_d1" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سجل"
            android:textSize="18dp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textColor="#fff"
            />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="الاسم "
            android:textSize="10dp"
            android:fontFamily="monospace"
            android:drawableRight="@drawable/user"
            android:textColor="#fff"
            android:textColorHint="#fff"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="البريد الالكتروني"
            android:textSize="10dp"
            android:fontFamily="monospace"
            android:drawableRight="@drawable/gmail"
            android:textColor="#fff"
            android:textColorHint="#fff"/>

        <EditText
            android:id="@+id/pass_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="كلمة السر"
            android:textSize="10dp"
            android:fontFamily="monospace"
            android:drawableRight="@drawable/pass"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textColorHint="#fff"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="الولاية"
            android:textSize="10dp"
            android:fontFamily="monospace"
            android:drawableRight="@drawable/locat"
            android:textColor="#fff"
            android:textColorHint="#fff"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=" رقم الهاتف"
            android:textSize="10dp"
            android:fontFamily="monospace"
            android:drawableRight="@drawable/phone"
            android:textColor="#fff"
            android:textColorHint="#fff"/>


        <GridView
            android:id="@+id/g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:numColumns="4">
        </GridView>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تسجيل"
            android:textSize="20dp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:background="@color/colorView"
            android:textColor="#fff"
            android:layout_margin="3dp"></Button>
    </LinearLayout>

</RelativeLayout>
